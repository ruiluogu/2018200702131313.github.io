<script>
$(document).ready(function(e) {
    $("#up").click(function(){
        if($("#user").val()==""){
            $("#tishi").html("用户名不能空！");
            }else 
        if($("#password").val()==""){
            $("#tishi").html("密码不能空！");
            }else 
        if($("#user").val()=="111"&&$("#password").val()=="111"){
            $(".up").css("display","none");
            $(".name").html("111！");
            $(".ok").css("display","block");
            } else{
                $("#tishi").html("用户名或密码不正确！");
                }
        });
        $("#off").click(function(){
            $(".up").css("display","block");
            $(".ok").css("display","none");
            });
});
 
</script>
